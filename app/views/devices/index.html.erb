<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.price %></td>
        <td><%= link_to 'Show', device %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_employee.role.name =='admin' %>
<%= link_to 'New Device', new_device_path %>
<% end %>

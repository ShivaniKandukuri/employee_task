<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Added_by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.added_by %></td>
        <td><%= link_to 'Show', team %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_employee.role.name=='admin' %>
<%= link_to 'New team', new_team_path %>
<% end %>
